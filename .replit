run = "php -S 0.0.0.0:8000 -t ."

entrypoint = "index.php"
modules = ["php-8.2"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["php", "artisan", "serve", "--host=0.0.0.0", "--port=5000"]
deploymentTarget = "autoscale"
build = ["php", "artisan", "config:cache"]

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ERP Mini"

[[workflows.workflow]]
name = "ERP Mini"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000
